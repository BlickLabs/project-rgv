{% extends "partials/base.njk" %}

{% block meta %}
{% endblock %}

{% block title %}
  Contacto
{% endblock %}

{% block content %}
  <div class="contact-container">
    <div class="contact-section-1">
      <div class="contact-section-content-1">
        <div class="section-title white-title">
          <h2 class="rgv-font-lin-libertine contact-title">Contacto</h2>
        </div>
        <div class="contact-divider"></div>
        <div class="section-description">
          <p class="rgv-font-montserrat-extralight">
            Si deseas contactarnos envia un correo a:
          </p>
        </div>
        <div class="section-email">
          <p class="rgv-font-montserrat-light">
            contacto@rgvsoluciones.com
          </p>
        </div>
        <form class="rgv-font-montserrat-extralight form-section-1" action="" method="post">
          <input type="text" placeholder="Nombre" onfocus="this.placeholder = ''" onblur="this.placeholder = 'Nombre'">
          <input type="email" placeholder="Correo electrónico" onfocus="this.placeholder = ''" onblur="this.placeholder = 'Correo electrónico'">
          <textarea name="message" id="message" cols="30" rows="10" placeholder="Mensaje" onfocus="this.placeholder = ''" onblur="this.placeholder = 'Mensaje'"></textarea>
          <div class="align-right">
            <a href="services.html">
              <button class="rgv-button button-gold rgv-font-montserrat-regular">Enviar</button>
            </a>
          </div>
        </form>
      </div>
    </div>
    <div class="contact-section-2">
      <div class="contact-section-content-2">
        <div class="section-title blue-title">
          <h2 class="rgv-font-lin-libertine contact-title">Oportunidades <span class="linbertine-gold">de trabajo</span></h2>
        </div>
        <div class="contact-divider"></div>
        <div class="section-description">
          <p class="rgv-font-montserrat-extralight">
            Estamos interesados en personas preparadas.
            Si deseas contactarnos envia un correo a:
          </p>
        </div>
        <div class="section-email">
          <p class="rgv-font-montserrat-light">
            oportunidades@rgvsoluciones.com
          </p>
        </div>
        <form class="rgv-font-montserrat-extralight form-section-2" action="">
          <input type="text" placeholder="Nombre" onfocus="this.placeholder = ''" onblur="this.placeholder = 'Nombre'">
          <input type="text" placeholder="Fecha de nacimiento" onfocus="this.placeholder = ''" onblur="this.placeholder = 'Fecha de nacimiento'">
          <input type="email" placeholder="Correo electrónico" onfocus="this.placeholder = ''" onblur="this.placeholder = 'Correo electrónico'">
          <input type="text" placeholder="Título" onfocus="this.placeholder = ''" onblur="this.placeholder = 'Título'">
          <input type="text" placeholder="Teléfono" onfocus="this.placeholder = ''" onblur="this.placeholder = 'Teléfono'">
          <div class="align-right">
            <a href="services.html">
              <button class="rgv-button button-blue rgv-font-montserrat-regular">Postularme</button>
            </a>
          </div>
        </form>
      </div>
    </div>
  </div>
{% endblock %}