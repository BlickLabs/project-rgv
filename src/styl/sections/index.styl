.section-1
  height 100vh
  background-image url('../img/backgrounds/section-1.jpg')
  background-size cover
  display flex
  flex-direction column
  justify-content center
  align-items center
  .section-1-content
    width 662px
    text-align center
    font-size 34px
    font-weight 100
    position relative
    p
      text-align center
      margin 0
      color #fff
      margin-bottom 55px
  .vertical-slide
    display flex
    justify-content center
    flex-direction column
    position absolute
    bottom 0
    .down-arrow
      width 15px
      height 15px
      display flex
      justify-content center
      align-items center
      background-color #fff
      border-radius 50%
      cursor pointer
    .down-arrow-stroke
      height 44px
      width 1px
      background-color #fff
      margin 0 auto
.section-2
  height 304px
  .section-2-content
    width 1024px
    margin 0 auto
    display flex
    .building-parallax-container
      width 508px
      .building-parallax
        width 508px
        height 316px
        background-color red
        position relative
        top 55px
    .general-info
      width 516px
      padding 79px 42px 46px 63px
      p
        color #2b4455
        font-size 13px
        letter-spacing 0.1px
        line-height 20px
        margin 0
        margin-bottom 25px
        font-weight 100
.section-5
  height 34vw
  background-image url('../img/backgrounds/section-5.jpg')
  background-size 100% 100%
  display flex
  justify-content center
  align-items center
  .section-5-content
    width 592px
    font-size 30px
    font-weight 100
    p
      text-align center
      margin 0
      color #324a5c
.linbertine-blue
  color #8099a8
.linbertine-gold
  color #afa48f
.rgv-button
  border 0
  padding 10.5px 20px
  font-size 12px
  border-radius 1px
  cursor pointer
  transition 200ms background-color
.button-white
  background-color #f2f2f2
  color #3e5d72
  &:hover
    background-color #d7dcdc
.button-blue
  background-color #7d97a6
  color #fff
  letter-spacing 0.4px
  &:hover
    background-color #677d8f
    







