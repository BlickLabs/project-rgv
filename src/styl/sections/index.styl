.section-title
  text-align center
  h2
    font-size 46px
    font-weight 100
    margin 0
    margin-bottom 13px
.contact-title
  h2
    font-size 36px
.white-title
  color #fff
.blue-title
  color #284052
.section-title-divider
  margin 0 auto 45px auto
  width 100px
  height 1px
.divider-
  &white
    background-color #fff
  &spacegray
    background-color #979797
  &lightgray
    background-color #e5e5e5
    margin-bottom 34px
.section-1
  height 100vh
  background-image url('../img/backgrounds/section-1.jpg')
  background-size cover
  display flex
  flex-direction column
  justify-content center
  align-items center
  .section-1-content
    width 662px
    text-align center
    font-size 46px
    font-weight 100
    position relative
    p
      text-align center
      margin 0
      color #fff
  .vertical-slide
    display flex
    justify-content center
    flex-direction column
    position absolute
    bottom 0
    .down-arrow
      width 15px
      height 15px
      display flex
      justify-content center
      align-items center
      background-color #fff
      border-radius 50%
      cursor pointer
    .down-arrow-stroke
      height 44px
      width 1px
      background-color #fff
      margin 0 auto
.section-2
  height 386px
  padding-top 88px
  .section-2-content
    max-width 1024px
    width 100%
    margin 0 auto
    display flex
    .building-parallax-container
      width 49.6%
      .building-parallax
        width 100%
        height 100%
        background url('../img/parallax-building.jpg')
        background-attachment fixed
        background-size cover
        background-position -275px top
        background-repeat no-repeat
        position relative
        top 55px
    .general-info
      width 60.4%
      padding 79px 42px 46px 63px
      p
        color #2b4455
        font-size 15px
        letter-spacing 0.1px
        line-height 20px
        margin 0
        margin-bottom 25px
        font-weight 100
.section-3
  background-color #283e51
  padding-top 135px
  padding-bottom 104px
  .section-3-content
    width 834px
    margin 0 auto
    text-align center
    .section-3-divider
      margin 0 auto 45px auto
      width 100px
      height 1px
      background-color #fff
    .section-3-description
      margin-bottom 90px
      p
        width 639px
        margin 0 auto
        font-size 13px
        font-weight 100
        letter-spacing 0.1px
        text-align center
        color #fff
        line-height 23px
    .section-3-features
      display flex
      justify-content space-between
      flex-wrap wrap
      margin-bottom 70px
      .rgv-feature-3
        .feature-logo
          img
            width 54px
            height 42px
      [class*='rgv-feature-']
        box-sizing border-box
        width 404px
        height 260px
        margin-bottom 24px
        display flex
        justify-content center
        align-items center
        .feature-content
          width 260px
          text-align left
          .feature-logo
            margin-bottom 15px
          .feature-title
            h3
              font-size 20px
              letter-spacing .4px
              margin 0
              margin-bottom 11px
          .feature-divider
            width 180px
            height 1px
            margin-bottom 20px
          .feature-description
            p
              font-size 13px
              margin 0
              line-height 17px
              font-weight 100
              letter-spacing 0.4px
      .rgv-feature-blue
        background-color #395265
        border-left 20px solid #89a6b6
        color #fff
        .feature-divider
          background-color #fff
      .rgv-feature-white
        background-color #f9f9f9
        border-left 20px solid #afa48f
        color #324a5c
        .feature-divider
          background-color #c7cbcf
.section-4
  .section-4-content
    max-width 900px
    width 100%
    margin 0 auto
    padding-top 85px
    padding-bottom 119px
    .section-4-description
      margin-bottom 35px
      p
        margin 0
        font-size 15px
        font-weight 100
        text-align center
        color #283f52
    .sectors
      display flex 
      flex-wrap wrap
      justify-content center
      margin 0 auto
      [class*='sector-']
        width 300px
        box-sizing border-box
        background-size cover
        height 187.5px
        .sector-overlay
          width 100%
          display flex
          align-items center
          justify-content center
          height 100%
          background-color #324a5c
          opacity 0
          transition 400ms opacity ease
          p
            margin 0
            text-align center
            color #fff
            font-size 25px
            width 95%
            cursor default
      [class*='sector-']:hover
        .sector-overlay
          opacity 1
      .sector-1
        background-image url('../img/sectors/sector-1.jpg')
      .sector-2
        background-image url('../img/sectors/sector-2.png')
      .sector-3
        background-image url('../img/sectors/sector-3.png')
      .sector-4
        background-image url('../img/sectors/sector-5.png')
      .sector-5
        background-image url('../img/sectors/sector-6.png')
      .sector-6
        background-image url('../img/sectors/sector-8.png')
      .sector-7
        background-image url('../img/sectors/sector-7.jpg')
      .sector-8
        background-image url('../img/sectors/sector-4.png')
      .sector-9
        background-image url('../img/sectors/sector-9.png')
.section-5
  height 34vw
  background-image url('../img/backgrounds/section-5.jpg')
  background-size 100% 100%
  display flex
  justify-content center
  align-items center
  .section-5-content
    width 90%
    font-size 46px
    font-weight 100
    p
      text-align center
      margin 0
      color #324a5c
.linbertine-blue
  color #8099a8
.linbertine-gold
  color #afa48f
.rgv-button
  border 0
  padding 10.5px 24px
  font-size 14px
  font-weight 100
  border-radius 1px
  cursor pointer
  transition 200ms background-color
.button-white
  background-color #f2f2f2
  color #3e5d72
  &:hover
    background-color #CED2D2
.button-blue
  background-color #7d97a6
  color #fff
  letter-spacing 0.4px
  &:hover
    background-color #677d8f
.button-gold
  background-color #afa48f
  color #fff
  letter-spacing 0.4px
  &:hover
    background-color #999180

@media screen and (max-width 832px)
  .section-3
    .section-3-content
      width 404px
      .section-3-description
        p
          width 404px
      .rgv-feature-3
        order 5

@media screen and (max-width 768px)
  .section-1
    .section-1-content
      width 480px
  .section-2
    height 550px
    .section-2-content
      flex-direction column
      .building-parallax-container
        order 3
        margin 0 auto
        width 480px
        height 298.6px
      .general-info
        width 90%
        margin 0 auto
        padding 0
        padding-top 40px
        text-align center
      
@media screen and (max-width 480px)
  .section-1
    .section-1-content
      width 90%
      p
        font-size 40px
  .section-2
    height 630px
    .section-2-content
      .building-parallax-container
        width 480px
        height 298.6px
        .building-parallax
          background-position center
  .section-3 
    .section-3-content
      width 300px
      .section-3-description 
        p
          width 300px
      .section-3-features
        justify-content center
        [class*='rgv-feature-']
          width 300px
          height 300px
          .feature-content
            width 200px
            .feature-description
              p
                font-size 14px
  .section-4
    .section-4-content
      padding-bottom 80px
      .section-4-description
        width 90%
        margin-left auto
        margin-right auto
  .section-5
    height 700px
    background-size cover
    .section-5-content
      width 90%
    







