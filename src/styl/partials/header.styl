.site-navbar
  height 88px
  background-color #1F3648
  padding 25px 42px
  display flex
  justify-content center
  align-items center
  position fixed
  top 0
  width 100%
  z-index 9

.site-navbar__menu-trigger,
.site-navbar__mobile-logo-container
  display none

.site-navbar__menu-trigger
  color white // Change

.site-navbar__desktop-logo-container
  position absolute
  left 42px
  img
    width 74px
    height 37px

.site-navbar__menu-container
  flex-grow 1
  text-align right
  height 100%

.site-navbar__menu
  height 100%
  display flex
  align-items center
  justify-content center
  text-align center
  :last-child
    margin-right 0

.site-navbar__menu-link
  color #fff
  font-size 13px
  margin-right 40px
  width 60px
  transition 100ms font-family ease
  transition 150ms color ease

  &:hover, &.active
    color #7d97a6

@media screen and (max-width: 767px) // Change
  .site-navbar
    justify-content flex-end
    height 88px // Change
    padding 0 18px // Change

  .site-navbar__desktop-logo-container
    left 18px
    img
      height 30px // Change
      width 60px

  .site-navbar__mobile-logo-container
    display block
    center-block()
    width 30% // Change

    img
      width 74px
      height 37px

  .site-navbar__menu-trigger
    display block
    float right
    font-size 18px// Change

  .site-navbar__menu-container
    background #1e3548 // Change
    height 100vh
    margin-right 0
    overflow-y auto
    position fixed
    right -280px
    top 0
    transition right 0.2s
    width 280px
    padding-top 25px // Change

  .site-navbar__menu-container--show-menu
    right 0
    box-shadow 0px 0px 2px 0px rgba(0,0,0,0.5)

  .site-navbar__menu
    margin-bottom 30px // Change
    margin-top 30px // Change
    text-align left
    height auto
    flex-wrap wrap
    padding-left 50px

  .site-navbar__menu-link
    display block
    height auto
    display block
    text-align left
    flex-basis 100%
    margin-top 40px
    font-size 16px