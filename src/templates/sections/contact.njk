{% extends "partials/base.njk" %}

{% block meta %}
{% endblock %}

{% block title %}
  Contacto
{% endblock %}

{% block content %}
  <div class="contact-container">
    <div class="contact-section-1">
      <div class="contact-section-content-1">
        <div class="section-title white-title contact-title">
          <h2 class="rgv-font-lin-libertine">Contacto</h2>
        </div>
        <div class="contact-divider"></div>
        <div class="section-description">
          <p class="rgv-font-montserrat-extralight">
            Si deseas contactarnos envia un correo a:
          </p>
        </div>
        <div class="section-email">
          <p class="rgv-font-montserrat-light">
            contacto@rgvsoluciones.com
          </p>
        </div>
        <form id="contact-form" class="rgv-font-montserrat-extralight form-section-1" action="http://integrations.blick.mx/rgv/email/" method="post">
          <input type="text" id="name" name="name" placeholder="Nombre" onfocus="this.placeholder = ''" onblur="this.placeholder = 'Nombre'">
          <input hidden="true" type="text" name="last_name" placeholder="Nombre">
          <input type="email" id="email" name="email" placeholder="Correo electrónico" onfocus="this.placeholder = ''" onblur="this.placeholder = 'Correo electrónico'">
          <textarea name="message" id="message" cols="30" rows="10" placeholder="Mensaje" onfocus="this.placeholder = ''" onblur="this.placeholder = 'Mensaje'" maxlength="500"></textarea>
          <input hidden="true" type="text" name="phone" placeholder="hidden" value="">
          <input hidden="true" type="text" name="address" placeholder="hidden" value="">
          <input hidden="true" type="text" name="company" placeholder="hidden" value="">
          <div class="align-right">
            <a href="services.html">
              <button class="rgv-button button-gold rgv-font-montserrat-regular">Enviar</button>
            </a>
          </div>
          <div class="form-message"></div>
        </form>
      </div>
    </div>
    <div class="contact-section-2">
      <div class="contact-section-content-2">
        <div class="section-title blue-title contact-title">
          <h2 class="rgv-font-lin-libertine">Oportunidades <span class="linbertine-gold">de trabajo</span></h2>
        </div>
        <div class="contact-divider"></div>
        <div class="section-description">
          <p class="rgv-font-montserrat-extralight">
            Estamos interesados en personas preparadas.
            Si deseas contactarnos envia un correo a:
          </p>
        </div>
        <div class="section-email">
          <p class="rgv-font-montserrat-light">
            oportunidades@rgvsoluciones.com
          </p>
        </div>
        <form id="job-form" class="rgv-font-montserrat-extralight form-section-2" action="http://integrations.blick.mx/rgv/opportunities/" method="post">
          <input type="text" id="name" name="name" placeholder="Nombre" onfocus="this.placeholder = ''" onblur="this.placeholder = 'Nombre'">
          <input type="date" id="birthdate" name="birthday" placeholder="Fecha de nacimiento" onfocus="this.placeholder = ''" onblur="this.placeholder = 'Fecha de nacimiento'">
          <input type="email" id="email" name="email" placeholder="Correo electrónico" onfocus="this.placeholder = ''" onblur="this.placeholder = 'Correo electrónico'">
          <input type="text" id="title" name="title" placeholder="Título" onfocus="this.placeholder = ''" onblur="this.placeholder = 'Título'">
          <input type="text" id="phone" name="phone" placeholder="Teléfono" onfocus="this.placeholder = ''" onblur="this.placeholder = 'Teléfono'">
          <div class="align-right">
            <a href="services.html">
              <button class="rgv-button button-blue rgv-font-montserrat-regular">Postularme</button>
            </a>
          </div>
          <div class="form-message"></div>
        </form>
      </div>
    </div>
  </div>
{% endblock %}